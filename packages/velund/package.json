  "files": [
    "dist",
    "types",
    "README.md"
  ],
  "keywords": [
    "velund",
    "vite",
    "ui-components",
    "ui-library",
    "component-system",
    "frontend",
    "backend",
    "typescript",
    "javascript",
    "vue",
    "react",
    "angular",
    "generator",
    "renderer",
    "twig",
    "jinja",
    "php",
    "python",
    "html",
    "template-engine",
    "modular-ui",
    "server-side-rendering",
    "ssr",
    "web-components",
    "framework-agnostic",
    "plugin"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./common": {
      "import": "./dist/common.js",
      "types": "./dist/common.d.ts"
    },
    "./env": {
      "types": "./types/env.d.ts"
    }
  },
  "scripts": {
    "dev": "vite",
    "build": "vite build && tsc -p tsconfig.build.json",
    "preview": "vite preview"
