  "devDependencies": {
    "@types/json-schema": "^7.0.15",
    "@types/node": "^24.3.0"
  },
  "peerDependencies": {
    "esbuild": "^0.25.9",
    "vite": "^7.1.2"
  },
  "dependencies": {
    "@velund/core": "workspace:^",
    "@velund/node": "workspace:^",
    "@velund/html": "workspace:^",
    "fast-glob": "^3.3.3",
